<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
document.getElementById('rzp-button1').onclick = function(e){
e.preventDefault();
const amt = document.getElementById("amt").textContent
fetch("http://127.0.0.1:3000/payment?amt="+amt).then(data=>{
return data.json()
}).then(result => {
 
    var options = {
    "key": "rzp_test_KKlu164SWMUaIG", // Enter the Key ID generated from the Dashboard
    "amount": result.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
